<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a new avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />

    <TableLayout
        android:layout_width="302dp"
        android:layout_height="309dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/canada"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="setIcon"
                app:srcCompat="@drawable/flag_ca" />

            <ImageView
                android:id="@+id/france"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="setIcon"
                app:srcCompat="@drawable/flag_fr"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/japan"
                android:onClick="setIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/flag_jp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/korea"
                android:onClick="setIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/flag_kr" />

            <ImageView
                android:id="@+id/egypt"
                android:onClick="setIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/flag_eg" />

            <ImageView
                android:id="@+id/spain"
                android:onClick="setIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/flag_sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/turkey"
                android:onClick="setIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/flag_tr" />

            <ImageView
                android:id="@+id/us"
                android:onClick="setIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/flag_us" />

            <ImageView
                android:id="@+id/uk"
                android:layout_width="100dp"
                android:onClick="setIcon"
                android:layout_height="100dp"
                app:srcCompat="@drawable/flag_uk" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>